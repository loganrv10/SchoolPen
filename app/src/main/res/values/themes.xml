<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.SchoolPen" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/color_primary_lite</item>
        <item name="colorPrimaryDark">@color/color_primary</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.SchoolPen" parent="Base.Theme.SchoolPen" />

    <style name="Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_rise_anim</item>
        <item name="android:windowExitAnimation">@anim/bottom_close_anim</item>
    </style>

    <style name="Animation_drawer">
        <item name="android:windowEnterAnimation">@anim/left_rise</item>
        <item name="android:windowExitAnimation">@anim/left_out</item>
    </style>

    <style name="tab_text">

        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/_10ssp</item>

    </style>

    <style name="tab_text1">

        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_11ssp</item>

    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">#20A686</item>
        <item name="android:switchTextOn">P</item>
        <item name="android:switchTextOff">A</item>
        <item name="switchTextAppearance">@style/switchTextStyle</item>
        <item name="showText">true</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#D81159
        </item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#50AAAAAA
        </item>
    </style>

    <style name="switchTextStyle">

        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/_10ssp</item>

    </style>

    <style name="BrandedSwitch.color" parent="Theme.SchoolPen">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#20A686</item>
        <item name="colorSwitchThumbNormal">#CC0000</item>
    </style>

    <style name="BrandedSwitch.text" parent="Theme.SchoolPen">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="calander_text">
        <item name="fontFamily">@font/lato_semi_bold</item>
        <item name="android:textSize">@dimen/_11ssp</item>

    </style>

    <style name="tv_wrap_content" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="edt_match_parent" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="edt_poppins_regular" parent="edt_match_parent">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="tv_poppins_regular" parent="tv_wrap_content">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="tv_poppins_medium" parent="tv_wrap_content">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="tv_poppins_semi_bold" parent="tv_wrap_content">
        <item name="fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="tv_poppins_bold" parent="tv_wrap_content">
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="tv_poppins_light" parent="tv_wrap_content">
        <item name="fontFamily">@font/poppins_light</item>
    </style>

    <style name="tv_poppins_regular_black_title" parent="tv_poppins_regular">
        <item name="android:textColor">@color/black_title_text</item>
    </style>

    <style name="tv_poppins_medium_black_title" parent="tv_poppins_medium">
        <item name="android:textColor">@color/black_title_text</item>
    </style>

    <style name="tv_poppins_medium_blue" parent="tv_poppins_medium">
        <item name="android:textColor">@color/homework_detail_tint</item>
    </style>

    <style name="tv_poppins_medium_white" parent="tv_poppins_medium">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tv_poppins_regular_grey" parent="tv_poppins_regular">
        <item name="android:textColor">@color/lite_grey</item>
    </style>

    <style name="tv_poppins_regular_blue" parent="tv_poppins_regular">
        <item name="android:textColor">@color/homework_detail_tint</item>
    </style>

    <style name="edt_poppins_regular_grey" parent="edt_poppins_regular">
        <item name="android:textColor">@color/lite_grey</item>
    </style>

    <style name="tv_poppins_light_grey" parent="tv_poppins_light">
        <item name="android:textColor">@color/lite_grey</item>
    </style>

    <style name="tv_poppins_semi_bold_black_title" parent="tv_poppins_semi_bold">
        <item name="android:textColor">@color/black_title_text</item>
    </style>

    <style name="tv_poppins_semi_bold_light_gray" parent="tv_poppins_semi_bold">
        <item name="android:textColor">@color/lite_grey</item>
    </style>

    <style name="tv_poppins_bold_light_gray" parent="tv_poppins_bold">
        <item name="android:textColor">@color/lite_grey</item>
    </style>

    <style name="tv_poppins_bold_black" parent="tv_poppins_bold">
        <item name="android:textColor">@color/pure_black</item>
    </style>

    <style name="tv_poppins_bold_title_black" parent="tv_poppins_bold">
        <item name="android:textColor">@color/black_title_text</item>
    </style>

    <style name="tv_poppins_bold_white" parent="tv_poppins_bold">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tv_poppins_regular_white" parent="tv_poppins_regular">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--RadioButton style-->
    <style name="rb_regular_black_title" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black_title_text</item>
        <item name="background">@drawable/radion_button_bg_selector</item>
        <item name="android:drawableRight">@drawable/radion_button_icon_selector</item>
        <item name="android:button">@null</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:drawablePadding">@dimen/_35sdp</item>
        <item name="android:layoutDirection">rtl</item>
    </style>
    <!--RadioButton style-->

    <!--RadioButton style-->
    <style name="chkbox_regular_black_title" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black_title_text</item>
        <item name="background">@drawable/radion_button_bg_selector</item>
        <item name="android:drawableRight">@drawable/radion_button_icon_selector</item>
        <item name="android:button">@null</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:drawablePadding">@dimen/_35sdp</item>
        <item name="android:layoutDirection">rtl</item>
    </style>
    <!--RadioButton style-->

</resources>