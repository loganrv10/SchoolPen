<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.SchoolPen" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:colorPrimary">@color/color_primary_lite</item>
        <item name="android:colorPrimaryDark">@color/color_primary</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.SchoolPen" parent="Base.Theme.SchoolPen" />

    <style name="Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_rise_anim</item>
        <item name="android:windowExitAnimation">@anim/bottom_close_anim</item>
    </style>

    <style name="tab_text">

        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/_10ssp</item>

    </style>

    <style name="BrandedSwitch.color" parent="Theme.SchoolPen">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#20A686</item>
        <item name="colorSwitchThumbNormal">#CC0000</item>
    </style>

    <style name="BrandedSwitch.text" parent="Theme.SchoolPen">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="calander_text">
        <item name="android:fontFamily">@font/lato_semi_bold</item>
        <item name="android:textSize">@dimen/_11ssp</item>

    </style>
</resources>