<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginVertical="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_5sdp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/payment_details_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:outlineProvider="none"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                android:backgroundTint="@color/white"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/feedetail_background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvStudentName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:fontFamily="@font/lato_regular"
                        android:text="Student Name: "
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvStudentvalue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_semi_bold"
                        android:text="Akriti Singhal"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintBaseline_toBaselineOf="@id/tvStudentName"
                        app:layout_constraintStart_toEndOf="@id/tvStudentName" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvClassName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/lato_regular"
                        android:text="Class: "
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintStart_toStartOf="@id/tvStudentName"
                        app:layout_constraintTop_toBottomOf="@id/tvStudentName" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvClassvalue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_semi_bold"
                        android:text="V"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintBaseline_toBaselineOf="@id/tvClassName"
                        app:layout_constraintStart_toEndOf="@id/tvClassName" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvRollNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/lato_regular"
                        android:text="Roll No: "
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintStart_toStartOf="@id/tvStudentName"
                        app:layout_constraintTop_toBottomOf="@id/tvClassName" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvRollValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_semi_bold"
                        android:text="SIS/V/21"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintBaseline_toBaselineOf="@id/tvRollNo"
                        app:layout_constraintStart_toEndOf="@id/tvRollNo" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvFessName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_32sdp"
                        android:fontFamily="@font/lato_regular"
                        android:text="Fees Name: "
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintStart_toStartOf="@id/tvStudentName"
                        app:layout_constraintTop_toBottomOf="@id/tvRollNo" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvFeesValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_semi_bold"
                        android:text=" 1st Quater (Apr22 - Jun22)"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="@dimen/_40sdp"
                        app:layout_constraintBaseline_toBaselineOf="@id/tvFessName"
                        app:layout_constraintStart_toEndOf="@id/tvFessName" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvFessBreakup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:fontFamily="@font/lato_regular"
                        android:text="Fees Breakup"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintStart_toStartOf="@id/tvStudentName"
                        app:layout_constraintTop_toBottomOf="@id/tvFessName" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTutionFees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:fontFamily="@font/lato_regular"
                        android:text="@string/tution_fees"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvFessBreakup" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvLibraryFees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="@string/library_fees"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintStart_toStartOf="@id/tvTutionFees"
                        app:layout_constraintTop_toBottomOf="@id/tvTutionFees" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvSchoolFees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:fontFamily="@font/lato_regular"
                        android:text="@string/school_fund"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintStart_toStartOf="@id/tvLibraryFees"
                        app:layout_constraintTop_toBottomOf="@id/tvLibraryFees" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTotalFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_35sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_100sdp"
                        android:fontFamily="@font/lato_regular"
                        android:text="Total Fees"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tvTotalFeeValue"
                        app:layout_constraintTop_toBottomOf="@id/tvSchoolFees" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTotalFeeValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:fontFamily="@font/lato_semi_bold"
                        android:text="6000"
                        android:drawableStart="@drawable/vector_rupee_"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        app:layout_constraintBaseline_toBaselineOf="@id/tvTotalFee"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/tvSchoolFees" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvChoosePayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/lato_semi_bold"
                android:text="Choose Payment option"
                android:textColor="#383838"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/payment_details_container" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnFullpayment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/gradient_btn"
                android:fontFamily="@font/lato_regular"
                android:gravity="center"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="Full Payment"
                android:layout_marginEnd="@dimen/_4sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintEnd_toStartOf="@id/btnInstallment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvChoosePayment" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnInstallment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/install_btn_bg"
                android:fontFamily="@font/lato_regular"
                android:gravity="center"
                android:paddingTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="Installment"
                android:textColor="#707070"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnFullpayment"
                app:layout_constraintTop_toBottomOf="@id/tvChoosePayment" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24sdp"
                android:fontFamily="@font/lato_semi_bold"
                android:text="Amount"
                android:textColor="#383838"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/tvChoosePayment"
                app:layout_constraintTop_toBottomOf="@id/btnFullpayment" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnAmount"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/gradient_btn"
                android:backgroundTint="#489163D7"
                android:fontFamily="@font/lato_semi_bold"
                android:gravity="start"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="6000"
                android:drawableTint="@color/black"
                android:drawableStart="@drawable/vector_rupee_"
                android:drawablePadding="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintEnd_toEndOf="@id/btnInstallment"
                app:layout_constraintTop_toBottomOf="@id/btnFullpayment" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnProceed"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_40sdp"
                android:background="@drawable/gradient_btn"
                android:fontFamily="@font/lato_semi_bold"
                android:gravity="center"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="Proceed to Payment"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_50sdp"
                app:layout_constraintTop_toBottomOf="@id/btnAmount" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>