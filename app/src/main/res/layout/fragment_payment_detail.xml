<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_5sdp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/payment_details_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:backgroundTint="@color/tabs_color"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvStudentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/lato_regular"
                android:text="Student Name: "
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvStudentvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="Akriti Singhal"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintBaseline_toBaselineOf="@id/tvStudentName"
                app:layout_constraintStart_toEndOf="@id/tvStudentName" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvClassName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/lato_regular"
                android:text="Class: "
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toStartOf="@id/tvStudentName"
                app:layout_constraintTop_toBottomOf="@id/tvStudentName" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvClassvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="V"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintBaseline_toBaselineOf="@id/tvClassName"
                app:layout_constraintStart_toEndOf="@id/tvClassName" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRollNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/lato_regular"
                android:text="Roll No: "
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toStartOf="@id/tvStudentName"
                app:layout_constraintTop_toBottomOf="@id/tvClassName" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRollValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="SIS/V/21"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintBaseline_toBaselineOf="@id/tvRollNo"
                app:layout_constraintStart_toEndOf="@id/tvRollNo" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFessName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_32sdp"
                android:fontFamily="@font/lato_regular"
                android:text="Fees Name: "
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toStartOf="@id/tvStudentName"
                app:layout_constraintTop_toBottomOf="@id/tvRollNo" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFeesValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semi_bold"
                android:text=" 1st Quater(Apr22 - Jun22)"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintBaseline_toBaselineOf="@id/tvFessName"
                app:layout_constraintStart_toEndOf="@id/tvFessName" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFessBreakup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:fontFamily="@font/lato_regular"
                android:text="Fees Breakup"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toStartOf="@id/tvStudentName"
                app:layout_constraintTop_toBottomOf="@id/tvFessName" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTutionFees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:fontFamily="@font/lato_regular"
                android:text="@string/tution_fees"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvFessBreakup" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLibraryFees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@string/library_fees"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintStart_toStartOf="@id/tvTutionFees"
                app:layout_constraintTop_toBottomOf="@id/tvTutionFees" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSchoolFees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/lato_regular"
                android:text="@string/school_fund"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintStart_toStartOf="@id/tvLibraryFees"
                app:layout_constraintTop_toBottomOf="@id/tvLibraryFees" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTotalFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/lato_regular"
                android:text="Total Fees"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@id/tvTotalFeeValue"
                app:layout_constraintTop_toBottomOf="@id/tvSchoolFees" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTotalFeeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="$ 6000"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintBaseline_toBaselineOf="@id/tvTotalFee"
                app:layout_constraintEnd_toEndOf="@id/tvSchoolFees" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvChoosePayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:fontFamily="@font/lato_semi_bold"
        android:text="Choose Payment option"
        android:textColor="#383838"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/payment_details_container" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnFullpayment"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@drawable/gradient_btn"
        android:fontFamily="@font/lato_regular"
        android:gravity="center"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:text="Full Payment"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvChoosePayment" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="@dimen/_130sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:fontFamily="@font/lato_regular"
        android:gravity="center"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:text="Installment"
        android:textColor="#707070"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvChoosePayment" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_24sdp"
        android:fontFamily="@font/lato_semi_bold"
        android:text="Amount"
        android:textColor="#383838"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/tvChoosePayment"
        app:layout_constraintTop_toBottomOf="@id/btnFullpayment" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="@dimen/_130sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/gradient_btn"
        android:backgroundTint="#9163D7"
        android:fontFamily="@font/lato_regular"
        android:gravity="start"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:text="$ 6000"
        android:paddingStart="@dimen/_10sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_14sdp"
        app:layout_constraintTop_toBottomOf="@id/btnFullpayment"
        app:layout_constraintStart_toEndOf="@id/tvAmount"/>

</androidx.constraintlayout.widget.ConstraintLayout>