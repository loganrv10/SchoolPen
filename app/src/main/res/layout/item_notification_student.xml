<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginVertical="@dimen/_5sdp"
    android:background="@drawable/back_15sdp"
    android:backgroundTint="#F4F0FB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8sdp"
        android:orientation="horizontal">


    <ImageView
        android:id="@+id/notificationTypeImage"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/ic_baseline_fee"
        android:padding="@dimen/_13sdp"
        android:background="@drawable/circle_back"
        android:backgroundTint="#30AAAAAA"
        app:tint="@color/blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notificationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semester Fees"
            android:fontFamily="@font/poppins_semi_bold"
            android:textSize="@dimen/_13ssp"
            />

        <TextView
            android:id="@+id/notificationDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fee Payment"
            android:fontFamily="@font/poppins_semi_bold"
            android:textSize="@dimen/_10ssp"
            />

        <TextView
            android:id="@+id/notificationBrief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit fees for the month of sept by 15, after that late fees will be applied"
            android:textColor="#707070"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/_10ssp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:id="@+id/btnAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay Now"
                android:background="@drawable/back_10sdp"
                android:paddingHorizontal="@dimen/_15sdp"
                android:textSize="@dimen/_11ssp"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semi_bold"
                android:paddingVertical="@dimen/_4sdp"/>


            <TextView
                android:id="@+id/timeStamp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="45 min ago"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_8ssp"/>

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#20AAAAAA"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_gravity="bottom"/>

</FrameLayout>