<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/instructor_info_container_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/group_image_background"
            android:paddingTop="@dimen/_20sdp"
            android:paddingBottom="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:elevation="10dp"
            android:fontFamily="@font/lato_regular"
            android:text="@string/tution_fee"
            android:textColor="#707070"
            android:textSize="@dimen/_8ssp"
            app:layout_constraintStart_toStartOf="@id/instructor_info_container_button"
            app:layout_constraintTop_toTopOf="@id/instructor_info_container_button" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:elevation="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/september_fees"
            android:textColor="#707070"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toStartOf="@id/tvFee"
            app:layout_constraintTop_toBottomOf="@id/tvFee" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:elevation="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/_6000"
            android:drawableStart="@drawable/vector_rupee_"
            android:drawablePadding="@dimen/_5sdp"
            android:textColor="@color/color_primary"
            android:textSize="@dimen/_20ssp"
            android:drawableTint="@color/color_primary"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/ivDownload"
            app:layout_constraintTop_toTopOf="@id/instructor_info_container_button" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/submitted_on_14_09_2022"
            android:textColor="#707070"
            android:textSize="@dimen/_8ssp"
            app:layout_constraintEnd_toEndOf="@id/tvPrice"
            app:layout_constraintTop_toBottomOf="@id/tvPrice" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ivDownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@null"
            android:elevation="10dp"
            android:scaleType="center"
            android:src="@drawable/vector_download_"
            app:layout_constraintBottom_toBottomOf="@id/instructor_info_container_button"
            app:layout_constraintEnd_toEndOf="@id/instructor_info_container_button"
            app:layout_constraintTop_toTopOf="@id/instructor_info_container_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>