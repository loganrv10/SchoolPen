<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.asmanmirza.schoolpen.presentation.main.splash.SplashFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_startFragment"
            app:destination="@id/startFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/startFragment"
        android:name="com.asmanmirza.schoolpen.presentation.main.start.StartFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_start">
        <action
            android:id="@+id/action_startFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_startFragment_to_roleSelectFragment"
            app:destination="@id/roleSelectorFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.asmanmirza.schoolpen.presentation.main.auth.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_hostFragment"
            app:destination="@id/hostFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_teachersHostFragment"
            app:destination="@id/teacherHost"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/createAccountFragment"
        android:name="com.asmanmirza.schoolpen.presentation.main.auth.signup.CreateAccountFragment"
        android:label="fragment_create_account"
        tools:layout="@layout/fragment_create_account" >
        <action
            android:id="@+id/action_createAccountFragment_to_hostFragment"
            app:destination="@id/hostFragment"
            app:popUpTo="@id/createAccountFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/roleSelectorFragment"
        android:name="com.asmanmirza.schoolpen.presentation.main.auth.signup.RoleSelectorFragment"
        android:label="fragment_role_selector"
        tools:layout="@layout/fragment_role_selector" >
        <action
            android:id="@+id/action_roleSelectorFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:popUpTo="@id/roleSelectorFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.asmanmirza.schoolpen.presentation.main.auth.signup.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_createAccountFragment"
            app:destination="@id/createAccountFragment"
            app:popUpTo="@id/signUpFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_signUpFragment_to_HostFragment"
            app:destination="@id/hostFragment"
            app:popUpTo="@id/signUpFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/hostFragment"
        android:name="com.asmanmirza.schoolpen.presentation.main.host.HostFragment"
        android:label="fragment_host"
        tools:layout="@layout/fragment_host">

        <action
            android:id="@+id/action_host_to_gradingFragment"
            app:destination="@id/gradingFragment"
            app:popUpTo="@id/hostFragment"
            app:popUpToInclusive="false" />

    </fragment>

    <fragment
        android:id="@+id/gradingFragment"
        android:name="com.asmanmirza.schoolpen.presentation.main.classwork.grades.GradingFragment"
        android:label="fragment_gradingFragment"
        tools:layout="@layout/fragment_grading" />

    <fragment
        android:id="@+id/teacherHost"
        android:name="com.asmanmirza.schoolpen.presentation.main.Teacher.host.TeacherHostFragment"
        android:label="fragment_teacherHost"
        tools:layout="@layout/fragment_teacher_host" />


</navigation>